<div class="page-header">
  <h1>Imported Kindle Books</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="list-group">
      <% @kindle_books.each do |book| %>         
        <%= link_to user_kindle_book_path(@user, book), class: "list-group-item" do %>
          <span class="badge">
            <%= book.kindle_notes.count %>
          </span>
          <%= book.title %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>