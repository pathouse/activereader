<script>
  $(document).ready(function() {
    var props = { book: <%= KindleBooksSerializer.new(@kindle_book, root: false).to_json.html_safe %> }
    var mountPoint = document.getElementById('react-note-index-mount')
    if (mountPoint) {
      React.renderComponent(NotesIndex(props), mountPoint)
    }
  })
</script>

<div class="row">
  <div class="col-md-10" id="react-note-index-mount"></div>
  <div class="col-md-2">
    <%= link_to "BACK", user_dashboard_path(@user), class: "btn btn-default" %>
  </div>
</div>
