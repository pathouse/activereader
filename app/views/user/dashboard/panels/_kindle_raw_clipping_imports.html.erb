<div class="panel panel-default">
  <div class="panel-heading">
    <div class="row">
      <div class="col-md-7">
        <h4>Raw Clipping Files</h4>
      </div>
      <div class="col-md-5">
        <%= link_to "Import from Kindle", new_user_kindle_raw_clipping_path(@user), class: "btn btn-default btn-small" %>
      </div>
    </div>
  </div>
  <div class="panel-body">
    <p>
      You have uploaded <strong><%= kindle_raw_clippings.count %></strong>
      raw clipping files from your Kindle.
      <%= link_to "#", rel: "tooltip", data: { toggle: "tooltip", placement: "top" },
                       title: "These may eventually be limited in number based on resource constraints." do %>
        <span class="glyphicon glyphicon-question-sign"></span>
      <% end %>
    </p>
  </div>
  <ul class="list-group">
    <% kindle_raw_clippings.each_with_index do |clipping, idx| %>
      <li class="list-group-item">
        <%= [idx + 1, clipping.created_at.stamp('Uploaded March 31, 1990 at 2:15 PM')].join(" -- ") %>
      </li>
    <% end %>
  </ul>
</div>
