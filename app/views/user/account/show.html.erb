<div class="page-header">
  <h2>Your Account</h2>
</div>

<dl class="dl-horizontal">
  <dt>Email:</dt>
  <dd><%= @user.email %></dd>

  <dt>Evernote Connected:</dt>
  <dd> 
    <%= @evernote_connected.to_s.capitalize %>
    <% unless @evernote_connected %>
      <br />
      <%= link_to "Authorize Your Account", "/auth/evernote", class: "btn btn-success" %>
    <% end %>
  </dd>
</dl>